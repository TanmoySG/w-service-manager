{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TanmoySG/w-service-manager/blob/service-onboarding/schema/new-request.schema.json",
    "title": "New Service Onboarding",
    "description": "Service Onboarding Request Schema",
    "type": "object",
    "properties": {
        "service": {
            "description": "Information about Service",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of Service",
                    "type": "string"
                },
                "repository": {
                    "description": "Open Source Repository for Service",
                    "type": "string"
                },
                "details": {
                    "description": "Information about what the Service does.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 2
                }
            },
            "required": [
                "name",
                "details"
            ]
        },
        "data": {
            "description": "Information about Data Required and Usage",
            "type": "object",
            "patternProperties": {
                "$": {
                    "type": "object",
                    "properties": {
                        "access": {
                            "description": "access type",
                            "type": "string"
                        },
                        "use": {
                            "description": "Usage Information",
                            "type": "string"
                        }
                    },
                    "required": [
                        "access",
                        "use"
                    ]
                }
            }
        }
    },
    "required": [
        "service"
    ]
}