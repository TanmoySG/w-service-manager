{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/TanmoySG/w-service-manager/blob/service-onboarding/schema/new-request.schema.json",
    "title": "New Service Onboarding",
    "description": "Service Onboarding Request Schema",
    "type": "object",
    "properties": {
        "kind": {
            "description": "Kind of Resource",
            "enum": [
                "contract.service-onboarding"
            ]
        },
        "request_id": {
            "description": "Service Onboarding ",
            "type": "string"
        },
        "service": {
            "description": "Information about Service",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of Service",
                    "type": "string"
                },
                "repository": {
                    "description": "Open Source Repository for Service",
                    "type": "string"
                },
                "details": {
                    "description": "Information about what the Service does.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 2
                }
            },
            "required": [
                "name",
                "details"
            ]
        },
        "data": {
            "description": "Information about Data Required and Usage",
            "type": "object",
            "patternProperties": {
                "$": {
                    "type": "object",
                    "properties": {
                        "access": {
                            "description": "Access type",
                            "type": "array",
                            "items": {
                                "enum": [
                                    "read"
                                ]
                            }
                        },
                        "use": {
                            "description": "Usage Information",
                            "type": "string"
                        }
                    },
                    "required": [
                        "access",
                        "use"
                    ]
                }
            }
        },
        "developer": {
            "description": "Information about the App/Servie Owner/Representative",
            "type": "object",
            "properties": {
                "admin": {
                    "description": "Service Admin - An Overall Service Admin Mail",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "contributor": {
                    "description": "Service Contributor - A group Mail ID or DL for Contibutors",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "admin"
            ]
        }
    },
    "required": [
        "service",
        "data",
        "developer"
    ]
}